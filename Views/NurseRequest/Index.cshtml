<table class="table">
    <thead>
        <tr>
            <th>QN</th>
            <th>ชื่อ-นามสกุล</th>
            <th>ต้นทาง</th>
            <th>ปลายทาง</th>
            <th>พนักงานเวรเปล</th>
            <th>ประเภทรถ</th>
            <th>ระดับความเร่งด่วน </th>
            <th>สถานะ</th>
            <th>หมายเหตุ</th>
            <th>ยืนยัน</th>
            <th>แก้ไข</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var nurseeequest in Model)
        {
            <tr>
                <td>@nurseeequest.JobId</td>
                <td>@nurseeequest.QNName</td>
                <td>@nurseeequest.StartPoint</td>
                <td>@nurseeequest.EndPoint</td>
                <td>@nurseeequest.PoterFname</td>
                <td>@nurseeequest.MaterialType</td>
                <td>@nurseeequest.UrentType</td>
                <td> </td>
                <td>@nurseeequest.Remark</td>
                <td> </td>
                <td style="white-space:nowrap">
                    <a class="btn btn-danger btn-sm" asp-controllers="NurseRequest" asp-action="Delete" asp-route-id="@nurseeequest.JobId" onclick="return confirm('Are you sure?')">Delete</a>
                    <a class="btn btn-primary btn-sm" asp-controllers="NurseRequest" asp-action="Edit" asp-route-id="@nurseeequest.JobId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>