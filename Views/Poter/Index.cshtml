@model List<NurseRequest>
@{
}

<form method="post" enctype="multipart/form-data">
<table class="table">
    <thead>
        <tr>
            <th>QN</th>
            <th>ชื่อ-นามสกุล</th>
            <th>ต้นทาง</th>
            <th>ปลายทาง</th>
            <th>พนักงานเวรเปล</th>
            <th>ประเภทรถ</th>
            <th>ความเร่งด่วน</th>
            <th>สถานะ</th>
            <th>หมายเหตุ</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var nurserequest in Model)
        {  
            @if(nurserequest.JobStatusName != "สิ้นสุดการทำงาน")
            {  
            @if(nurserequest.UrgentType == "ปกติ")
            {
            <tr class="label-warning" style="background-color:rgb(131, 247, 131);" style="color:white;">
                <td>@nurserequest.QN</td>
                <td>@nurserequest.QNName</td>
                <td>@nurserequest.StartPoint</td>
                <td>@nurserequest.EndPoint1</td>
                <td>@nurserequest.PoterFname</td>
                <td>@nurserequest.MaterialType</td>
                <td>@nurserequest.UrgentType</td>
                <td>@nurserequest.JobStatusName</td>
                <td>@nurserequest.Remark</td>
                <td> </td>
                <td style="white-space:nowrap">
                    <a class="btn btn-warning btn-sm" asp-controllers="Poter" asp-action="Edit" asp-route-id="@nurserequest.JobId">Assign</a>
                    <a class="btn btn-danger btn-sm" asp-controllers="Poter" asp-action="Delete" asp-route-id="@nurserequest.JobId" onclick="return confirm('Are you sure?')">Close</a>
                    <input type="submit" class="btn btn-danger btn-sm" asp-controllers="Poter" asp-action="EditStatus" asp-route-id="@nurserequest.JobId" value="Finish"  />
                </td>
            </tr>
            }

            }
            @if(nurserequest.JobStatusName != "สิ้นสุดการทำงาน")
            {  
            @if(nurserequest.UrgentType == "ด่วน")
            {
            <tr class="label-warning" style="background-color:rgb(247, 247, 100);" style="color:white;">
                <td>@nurserequest.QN</td>
                <td>@nurserequest.QNName</td>
                <td>@nurserequest.StartPoint</td>
                <td>@nurserequest.EndPoint1</td>
                <td>@nurserequest.PoterFname</td>
                <td>@nurserequest.MaterialType</td>
                <td>@nurserequest.UrgentType</td>
                <td>@nurserequest.JobStatusName</td>
                <td>@nurserequest.Remark</td>
                <td> </td>
                <td style="white-space:nowrap">
                    <a class="btn btn-warning btn-sm" asp-controllers="Poter" asp-action="Edit" asp-route-id="@nurserequest.JobId">Assign</a>
                    <a class="btn btn-danger btn-sm" asp-controllers="Poter" asp-action="Delete" asp-route-id="@nurserequest.JobId" onclick="return confirm('Are you sure?')">Close</a>
                    <input type="submit" class="btn btn-danger btn-sm" asp-controllers="Poter" asp-action="EditStatus" asp-route-id="@nurserequest.JobId" value="Finish"  />
                </td>
            </tr>
            }

            }
            @if(nurserequest.JobStatusName != "สิ้นสุดการทำงาน")
            {  
            @if(nurserequest.UrgentType == "ด่วนมาก")
            {
            <tr class="label-warning" style="background-color:rgb(240, 114, 114);" style="color:white;">
                <td>@nurserequest.QN</td>
                <td>@nurserequest.QNName</td>
                <td>@nurserequest.StartPoint</td>
                <td>@nurserequest.EndPoint1</td>
                <td>@nurserequest.PoterFname</td>
                <td>@nurserequest.MaterialType</td>
                <td>@nurserequest.UrgentType</td>
                <td>@nurserequest.JobStatusName</td>
                <td>@nurserequest.Remark</td>
                <td> </td>
                <td style="white-space:nowrap">
                    <a class="btn btn-warning btn-sm" asp-controllers="Poter" asp-action="Edit" asp-route-id="@nurserequest.JobId">Assign</a>
                    <a class="btn btn-danger btn-sm" asp-controllers="Poter" asp-action="Delete" asp-route-id="@nurserequest.JobId" onclick="return confirm('Are you sure?')">Close</a>
                    <input type="submit" class="btn btn-danger btn-sm" asp-controllers="Poter" asp-action="EditStatus" asp-route-id="@nurserequest.JobId" value="Finish"  />
                </td>   
            </tr>
            }
        }
        }
    </tbody>
</table>
</form>
